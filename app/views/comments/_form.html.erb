<h1>Make a Comment</h1>

<div class="row d-flex justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @comment, url: [user, post, comment]) do |f| %> 
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :message %>
        <%= f.text_field :message, class: 'form-control', placeholder: "Say something..." %>
        
        <%= f.hidden_field :post_id, class: 'form-control', placeholder: '@post_id.id', value: @post&.id %>
        
        <%= f.submit "Make a comment", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>