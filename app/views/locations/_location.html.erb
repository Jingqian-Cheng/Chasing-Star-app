<div id="<%= dom_id location %>" class="col-sm-6">
  <div class="card">
    <%= image_tag("star.jpg") %>
    <%= image_tag location.image if location.image.attached? %>
    <div class="card-body">
      <h5 class="card-title"><%= location.location_name %></h5>
      <div> <%= location.average_rate %> ★★★★☆ 11 Posts</div>
      <div>[Park] [Mountain]</div>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item">Oct 20, 2022</li>
      <li class="list-group-item">✦ Clear</li>
      <li class="list-group-item">H:20 L:12</li>
    </ul>

    <div class="card-body">
        <small>77/100</small>
    </div>
    <hr/>
    <div class="card-body">
        <%= link_to "Show", location %>
        <%= link_to "Save", '#' %>
        <%= link_to "Share", '#' %>
    </div>
  </div>
</div>




