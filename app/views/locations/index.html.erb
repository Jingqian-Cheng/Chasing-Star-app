<% provide(:title, 'Locations') %>
<p style="color: green"><%= notice %></p>

<h1>Locations</h1>

<div id="locations">
  <% @locations.each do |location| %>
    <%= render location, date: params[:date] %>
    <p>
      <%= link_to "Show this location", location %>
    </p>
  <% end %>
</div>

