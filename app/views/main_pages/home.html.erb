<script>
    function select_date(date){
    document.getElementById("date_form").value= date;
    }

    const btn = document.getElementById("test");
    btn.addEventListener('click', function onClick() {
    btn.style.borderWidth = '10px';
    });
</script>

<div class="homepage-card">
            <%= month_calendar do |date| %>
                <div id="date-outline">
                    <button class="calendar-button" id="test" value=<%= date %> onclick="select_date(this.value)"><%= date.day %></button>
                </div>
            <% end %>
            <%= render 'search'%>
</div>
