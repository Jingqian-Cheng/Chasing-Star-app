<%= link_to user_post_path(post.user, post) do %>
	<div class="gallery-item" tabindex="0">
		<%= post.image.attached? ? image_tag(post.image, :class => "gallery-image") : image_tag("https://images.unsplash.com/photo-1488866022504-f2584929ca5f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1yZWxhdGVkfDF8fHxlbnwwfHx8fA%3D%3D&auto=format&fit=crop&w=500&q=60?w=500&h=500&fit=crop", :class => "gallery-image")%>
		<div class="gallery-item-info">
			<ul>
				<li class="gallery-item-likes"><i class="fas fa-user" aria-hidden="true"></i> <%= post.user.user_name %></li>
				<li class="gallery-item-likes"><i class="fas fa-location-dot" aria-hidden="true"></i> <%= post.location.location_name %></li>
				<li class="gallery-item-likes"><i class="fas fa-star" aria-hidden="true"></i> <%= post.rate %>/5</li>
				<li class="gallery-item-likes"><i class="fas fa-comment" aria-hidden="true"></i> <%= post.comments.count %></li>
			</ul>
		</div>
	</div>
<% end %>